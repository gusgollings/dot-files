if [ `uname` = 'Darwin' ]; then
  alias ls='ls -G'
  alias du='du -k -d 1 $argv'
else
  alias ls='ls --color=auto'
  alias du='du -k --max-depth=1 $argv'
fi

alias l='ls'
alias ll='ls -lh'
alias la='ls -a'
alias lal='ls -lah'

alias s='git status -sb $argv; return 0'
alias d='gd $argv'

alias sub='atom -n'
alias a='sub $argv .'

alias b='bundle exec'
alias r='bundle exec rake'

alias df='df -kh $argv'
alias reload_webkit='osascript -e 'tell application "WebKit" to do JavaScript "window.location.reload()" in front document''
alias tigs='tig status $argv'

alias add_alias='sub -w ~/.zsh/aliases; cd ~/.dot-files; ga files/.zsh/aliases; gc'
alias git_alias='sub -w ~/.zsh/git_aliases; cd ~/.dot-files; ga files/.zsh/git_aliases; gc'
alias be='bundle exec'

alias profileme="history | awk '{print \$2}' | awk 'BEGIN{FS=\"|\"}{print \$1}' | sort | uniq -c | sort -nr | head -n 20"

alias zs="zeus s"
alias zr="zeus rspec"
